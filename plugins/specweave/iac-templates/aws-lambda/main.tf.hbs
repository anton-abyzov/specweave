# AWS Lambda Function with API Gateway and DynamoDB
# Generated by SpecWeave Serverless Intelligence
# Platform: AWS Lambda
# Project: {{projectName}}
# Environment: {{environment}}

terraform {
  required_version = ">= 1.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

###############################
# Lambda Function
###############################

resource "aws_lambda_function" "{{snakeCase functionName}}" {
  function_name = "{{functionName}}-{{environment}}"
  role          = aws_iam_role.lambda_role.arn
  runtime       = "{{runtime}}"
  handler       = "{{#if handler}}{{handler}}{{else}}index.handler{{/if}}"
  filename      = "{{functionName}}.zip"

  memory_size = {{#if memorySize}}{{memorySize}}{{else}}256{{/if}}
  timeout     = {{#if timeout}}{{timeout}}{{else}}30{{/if}}

  environment {
    variables = {
      ENVIRONMENT = "{{environment}}"
      {{#if databaseName}}
      DYNAMODB_TABLE = aws_dynamodb_table.{{snakeCase databaseName}}.name
      {{/if}}
      {{#if apiName}}
      API_ENDPOINT = aws_apigatewayv2_api.{{snakeCase apiName}}.api_endpoint
      {{/if}}
    }
  }

  tags = {
    Name        = "{{functionName}}-{{environment}}"
    Environment = "{{environment}}"
    Project     = "{{projectName}}"
    ManagedBy   = "Terraform"
  }
}

###############################
# IAM Role and Policies
###############################

resource "aws_iam_role" "lambda_role" {
  name = "{{snakeCase functionName}}-lambda-role-{{environment}}"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "lambda.amazonaws.com"
        }
      }
    ]
  })

  tags = {
    Name        = "{{functionName}}-lambda-role"
    Environment = "{{environment}}"
    Project     = "{{projectName}}"
  }
}

# Basic Lambda execution policy
resource "aws_iam_role_policy_attachment" "lambda_basic" {
  role       = aws_iam_role.lambda_role.name
  policy_arn = "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
}

{{#if databaseName}}
# DynamoDB access policy
resource "aws_iam_role_policy" "dynamodb_policy" {
  name = "{{snakeCase functionName}}-dynamodb-policy"
  role = aws_iam_role.lambda_role.id

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "dynamodb:GetItem",
          "dynamodb:PutItem",
          "dynamodb:UpdateItem",
          "dynamodb:DeleteItem",
          "dynamodb:Query",
          "dynamodb:Scan"
        ]
        Resource = aws_dynamodb_table.{{snakeCase databaseName}}.arn
      }
    ]
  })
}
{{/if}}

###############################
# CloudWatch Logs
###############################

resource "aws_cloudwatch_log_group" "lambda_logs" {
  name              = "/aws/lambda/{{functionName}}-{{environment}}"
  retention_in_days = {{#if (eq environment "prod")}}30{{else}}7{{/if}}

  tags = {
    Name        = "{{functionName}}-logs"
    Environment = "{{environment}}"
    Project     = "{{projectName}}"
  }
}

{{#if apiName}}
###############################
# API Gateway HTTP API
###############################

resource "aws_apigatewayv2_api" "{{snakeCase apiName}}" {
  name          = "{{apiName}}-{{environment}}"
  protocol_type = "HTTP"
  description   = "API for {{projectName}} ({{environment}})"

  cors_configuration {
    allow_origins = {{#if (eq environment "prod")}}["https://{{projectName}}.com"]{{else}}["*"]{{/if}}
    allow_methods = ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    allow_headers = ["content-type", "authorization"]
    max_age       = 300
  }

  tags = {
    Name        = "{{apiName}}-{{environment}}"
    Environment = "{{environment}}"
    Project     = "{{projectName}}"
  }
}

resource "aws_apigatewayv2_stage" "{{snakeCase apiName}}_stage" {
  api_id      = aws_apigatewayv2_api.{{snakeCase apiName}}.id
  name        = "{{#if apiStageName}}{{apiStageName}}{{else}}$default{{/if}}"
  auto_deploy = true

  access_log_settings {
    destination_arn = aws_cloudwatch_log_group.api_logs.arn
    format = jsonencode({
      requestId      = "$context.requestId"
      ip             = "$context.identity.sourceIp"
      requestTime    = "$context.requestTime"
      httpMethod     = "$context.httpMethod"
      routeKey       = "$context.routeKey"
      status         = "$context.status"
      protocol       = "$context.protocol"
      responseLength = "$context.responseLength"
    })
  }

  tags = {
    Name        = "{{apiName}}-stage-{{environment}}"
    Environment = "{{environment}}"
    Project     = "{{projectName}}"
  }
}

resource "aws_apigatewayv2_integration" "lambda_integration" {
  api_id             = aws_apigatewayv2_api.{{snakeCase apiName}}.id
  integration_type   = "AWS_PROXY"
  integration_uri    = aws_lambda_function.{{snakeCase functionName}}.invoke_arn
  integration_method = "POST"
  payload_format_version = "2.0"
}

resource "aws_apigatewayv2_route" "proxy_route" {
  api_id    = aws_apigatewayv2_api.{{snakeCase apiName}}.id
  route_key = "ANY /{proxy+}"
  target    = "integrations/${aws_apigatewayv2_integration.lambda_integration.id}"
}

resource "aws_lambda_permission" "api_gateway" {
  statement_id  = "AllowExecutionFromAPIGateway"
  action        = "lambda:InvokeFunction"
  function_name = aws_lambda_function.{{snakeCase functionName}}.function_name
  principal     = "apigateway.amazonaws.com"
  source_arn    = "${aws_apigatewayv2_api.{{snakeCase apiName}}.execution_arn}/*/*"
}

resource "aws_cloudwatch_log_group" "api_logs" {
  name              = "/aws/apigateway/{{apiName}}-{{environment}}"
  retention_in_days = {{#if (eq environment "prod")}}30{{else}}7{{/if}}

  tags = {
    Name        = "{{apiName}}-logs"
    Environment = "{{environment}}"
    Project     = "{{projectName}}"
  }
}
{{/if}}

{{#if databaseName}}
###############################
# DynamoDB Table
###############################

resource "aws_dynamodb_table" "{{snakeCase databaseName}}" {
  name           = "{{databaseName}}-{{environment}}"
  billing_mode   = "PAY_PER_REQUEST" # On-demand pricing for variable workloads
  hash_key       = "id"
  stream_enabled = false

  attribute {
    name = "id"
    type = "S"
  }

  ttl {
    enabled        = false
    attribute_name = ""
  }

  point_in_time_recovery {
    enabled = {{#if (eq environment "prod")}}true{{else}}false{{/if}}
  }

  tags = {
    Name        = "{{databaseName}}-{{environment}}"
    Environment = "{{environment}}"
    Project     = "{{projectName}}"
    ManagedBy   = "Terraform"
  }
}
{{/if}}
