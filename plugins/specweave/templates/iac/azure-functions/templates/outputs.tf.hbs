# Outputs for Azure Functions + Cosmos DB
# Generated by SpecWeave Serverless Architecture Intelligence

output "function_url" {
  description = "Azure Function App URL"
  value       = "https://${azurerm_{{lowercase osType}}_function_app.{{snakeCase functionName}}.default_hostname}"
}

output "function_name" {
  description = "Function App name"
  value       = azurerm_{{lowercase osType}}_function_app.{{snakeCase functionName}}.name
}

output "function_id" {
  description = "Function App ID"
  value       = azurerm_{{lowercase osType}}_function_app.{{snakeCase functionName}}.id
}

output "resource_group_name" {
  description = "Resource group name"
  value       = azurerm_resource_group.{{snakeCase resourceGroupName}}.name
}

output "storage_account_name" {
  description = "Storage account name"
  value       = azurerm_storage_account.{{snakeCase storageAccountName}}.name
}

output "cosmos_db_endpoint" {
  description = "Cosmos DB endpoint"
  value       = azurerm_cosmosdb_account.{{snakeCase databaseName}}.endpoint
}

output "cosmos_db_database_name" {
  description = "Cosmos DB database name"
  value       = azurerm_cosmosdb_sql_database.{{snakeCase databaseName}}.name
}

output "cosmos_db_container_name" {
  description = "Cosmos DB container name"
  value       = azurerm_cosmosdb_sql_container.{{snakeCase databaseName}}.name
}

{{#if enableApplicationInsights}}
output "application_insights_key" {
  description = "Application Insights instrumentation key"
  value       = azurerm_application_insights.{{snakeCase functionName}}.instrumentation_key
  sensitive   = true
}

output "application_insights_connection_string" {
  description = "Application Insights connection string"
  value       = azurerm_application_insights.{{snakeCase functionName}}.connection_string
  sensitive   = true
}
{{/if}}

{{#if enableManagedIdentity}}
output "function_identity_principal_id" {
  description = "Managed Identity Principal ID"
  value       = azurerm_{{lowercase osType}}_function_app.{{snakeCase functionName}}.identity[0].principal_id
}

output "function_identity_tenant_id" {
  description = "Managed Identity Tenant ID"
  value       = azurerm_{{lowercase osType}}_function_app.{{snakeCase functionName}}.identity[0].tenant_id
}
{{/if}}

output "deployment_summary" {
  description = "Summary of deployed resources"
  value = {
    function_url         = "https://${azurerm_{{lowercase osType}}_function_app.{{snakeCase functionName}}.default_hostname}"
    function_name        = azurerm_{{lowercase osType}}_function_app.{{snakeCase functionName}}.name
    cosmos_db_endpoint   = azurerm_cosmosdb_account.{{snakeCase databaseName}}.endpoint
    cosmos_db_database   = azurerm_cosmosdb_sql_database.{{snakeCase databaseName}}.name
    environment          = var.environment
    location             = var.location
  }
}
