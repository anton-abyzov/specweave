# Development Environment Configuration
# Optimized for free tier and minimal costs
# Generated by SpecWeave Serverless Architecture Intelligence

location             = "{{location}}"
environment          = "dev"
resource_group_name  = "{{resourceGroupName}}-dev"
function_name        = "{{functionName}}-dev"
runtime              = "{{runtime}}"
runtime_version      = "{{runtimeVersion}}"
os_type              = "{{osType}}"

# Free tier optimized settings - Consumption Plan
sku_size = "Y1"  # Consumption plan (free tier eligible)

# Storage account (must be globally unique, 3-24 lowercase alphanumeric)
storage_account_name = "{{storageAccountName}}dev"

# Cosmos DB configuration
database_name        = "{{databaseName}}-dev"
primary_key          = "{{primaryKey}}"
cosmos_db_throughput = 400  # Free tier: first 1,000 RU/s free

# Logging (keep retention short in dev)
log_retention_days = 30

# CORS (allow localhost for development)
cors_origins = ["http://localhost:3000", "http://localhost:7071"]

# Project metadata
project_name = "{{projectName}}"

# Additional tags
tags = {
  CostCenter = "Development"
  AutoDelete = "true"  # Mark for cleanup scripts
}
