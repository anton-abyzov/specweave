# Staging Environment Configuration
# Premium plan for better performance
# Generated by SpecWeave Serverless Architecture Intelligence

location             = "{{location}}"
environment          = "staging"
resource_group_name  = "{{resourceGroupName}}-staging"
function_name        = "{{functionName}}-staging"
runtime              = "{{runtime}}"
runtime_version      = "{{runtimeVersion}}"
os_type              = "{{osType}}"

# Premium Plan EP1 (better cold start, VNet support)
sku_size = "EP1"  # 1 vCPU, 3.5 GB RAM, ~$15/month

# Storage account (must be globally unique, 3-24 lowercase alphanumeric)
storage_account_name = "{{storageAccountName}}stg"

# Cosmos DB configuration
database_name        = "{{databaseName}}-staging"
primary_key          = "{{primaryKey}}"
cosmos_db_throughput = 400  # Manual throughput for predictable costs

# Logging
log_retention_days = 90

# CORS (staging frontend URL)
cors_origins = ["https://staging.{{projectName}}.com"]

# Project metadata
project_name = "{{projectName}}"

# Additional tags
tags = {
  CostCenter = "Staging"
  AutoDelete = "false"
}
