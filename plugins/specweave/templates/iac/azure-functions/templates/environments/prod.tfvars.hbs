# Production Environment Configuration
# Premium plan with zone redundancy and backups
# Generated by SpecWeave Serverless Architecture Intelligence

location             = "{{location}}"
environment          = "prod"
resource_group_name  = "{{resourceGroupName}}-prod"
function_name        = "{{functionName}}-prod"
runtime              = "{{runtime}}"
runtime_version      = "{{runtimeVersion}}"
os_type              = "{{osType}}"

# Premium Plan EP2 (zone redundancy support)
sku_size = "EP2"  # 2 vCPU, 7 GB RAM, zone redundancy, ~$80/month

# Storage account (must be globally unique, 3-24 lowercase alphanumeric)
storage_account_name = "{{storageAccountName}}prd"

# Cosmos DB configuration
database_name        = "{{databaseName}}-prod"
primary_key          = "{{primaryKey}}"
cosmos_db_throughput = 1000  # Higher throughput for production

# Logging (long retention for compliance)
log_retention_days = 365

# CORS (production frontend URL)
cors_origins = ["https://{{projectName}}.com", "https://www.{{projectName}}.com"]

# Project metadata
project_name = "{{projectName}}"

# Additional tags
tags = {
  CostCenter  = "Production"
  AutoDelete  = "false"
  Compliance  = "true"
  DataClass   = "confidential"
}
