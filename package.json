{
  "name": "specweave",
  "version": "0.1.0",
  "description": "Spec-Driven Development framework with AI-powered autonomous agents for building SaaS applications",
  "main": "dist/index.js",
  "bin": {
    "specweave": "./bin/specweave.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "jest",
    "test:smoke": "bash tests/smoke/e2e-smoke-test.sh",
    "test:e2e": "playwright test tests/e2e/specweave-smoke.spec.ts",
    "test:all": "npm test && npm run test:smoke",
    "prepublishOnly": "npm run build",
    "install:agents": "bash bin/install-agents.sh",
    "install:skills": "bash bin/install-skills.sh",
    "install:all": "bash bin/install-all.sh",
    "install:agents:global": "bash bin/install-agents.sh --global",
    "install:skills:global": "bash bin/install-skills.sh --global",
    "install:all:global": "bash bin/install-all.sh --global"
  },
  "keywords": [
    "specweave",
    "intent-driven",
    "ai-agents",
    "claude-code",
    "autonomous-development",
    "saas",
    "nextjs",
    "prisma",
    "hetzner",
    "infrastructure",
    "terraform"
  ],
  "author": "SpecWeave Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/specweave/specweave.git"
  },
  "bugs": {
    "url": "https://github.com/specweave/specweave/issues"
  },
  "homepage": "https://github.com/specweave/specweave#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "src/templates",
    "src/skills",
    "src/agents",
    "src/hooks",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "@playwright/test": "^1.40.0"
  }
}
