{
  "name": "specweave",
  "version": "0.1.7",
  "description": "Spec-Driven Development framework with AI-powered autonomous agents for building SaaS applications",
  "main": "dist/index.js",
  "bin": {
    "specweave": "./bin/specweave.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "jest",
    "test:smoke": "bash tests/smoke/e2e-smoke-test.sh",
    "test:e2e": "playwright test tests/e2e/specweave-smoke.spec.ts",
    "test:all": "npm test && npm run test:smoke",
    "prepublishOnly": "npm run build",
    "install:agents": "bash bin/install-agents.sh",
    "install:skills": "bash bin/install-skills.sh",
    "install:all": "bash bin/install-all.sh",
    "install:agents:global": "bash bin/install-agents.sh --global",
    "install:skills:global": "bash bin/install-skills.sh --global",
    "install:all:global": "bash bin/install-all.sh --global",
    "generate:diagrams": "bash scripts/generate-diagram-svgs.sh",
    "docs:public": "cd docs-site && npm start",
    "docs:internal": "mkdocs serve -f mkdocs-internal.yml",
    "docs:build:public": "cd docs-site && npm run build",
    "docs:build:internal": "mkdocs build -f mkdocs-internal.yml"
  },
  "keywords": [
    "specweave",
    "intent-driven",
    "ai-agents",
    "claude-code",
    "autonomous-development",
    "saas",
    "nextjs",
    "prisma",
    "hetzner",
    "infrastructure",
    "terraform"
  ],
  "author": "SpecWeave Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anton-abyzov/specweave.git"
  },
  "bugs": {
    "url": "https://github.com/anton-abyzov/specweave/issues"
  },
  "homepage": "https://spec-weave.com",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "src/templates",
    "src/skills",
    "src/agents",
    "src/commands",
    "src/hooks",
    "src/adapters",
    "README.md",
    "SPECWEAVE.md",
    "CLAUDE.md",
    "INSTALL.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@playwright/test": "^1.40.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  }
}
