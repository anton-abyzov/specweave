{
  "name": "specweave",
  "version": "0.6.8",
  "description": "Replace vibe coding with spec-driven development. LLM-native i18n in 9 languages. Smart workflow: /specweave inc auto-closes previous, /specweave build auto-resumes, /specweave progress shows status. PM-led planning, 10 agents, 35+ skills. spec-weave.com",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "specweave": "./bin/specweave.js"
  },
  "scripts": {
    "build": "tsc && npm run copy:locales",
    "copy:locales": "node scripts/copy-locales.js",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "jest",
    "test:smoke": "bash tests/smoke/e2e-smoke-test.sh",
    "test:e2e": "playwright test tests/e2e/specweave-smoke.spec.ts",
    "test:integration": "npm run test:integration:ado && npm run test:integration:jira && npm run test:integration:ml",
    "test:integration:ado": "npx tsx tests/integration/ado-sync/ado-sync.test.ts",
    "test:integration:jira": "npx tsx tests/integration/jira-sync/jira-sync.test.ts",
    "test:integration:ml": "npx tsx tests/integration/ml-pipeline-workflow/ml-pipeline-soccer-detection.test.ts",
    "test:sync:jira": "npx tsx tests/integration/jira-sync/jira-bidirectional-sync.test.ts",
    "test:incremental:jira": "npx tsx tests/integration/jira-sync/jira-incremental-sync.test.ts",
    "test:ml:pipeline": "npx tsx tests/integration/ml-pipeline-workflow/ml-pipeline-soccer-detection.test.ts",
    "test:ml:real": "npx tsx tests/integration/ml-pipeline-workflow/ml-pipeline-real-video.test.ts",
    "test:github-sync": "npx tsx scripts/test-github-sync.ts",
    "generate:tests": "npx tsx scripts/generate-tests.ts",
    "generate:tests:skill": "npx tsx scripts/generate-tests.ts",
    "test:all:generated": "bash scripts/run-all-tests.sh",
    "test:all": "npm test && npm run test:smoke && npm run test:integration",
    "generate:skills-index": "npx tsx src/utils/generate-skills-index.ts",
    "prepublishOnly": "npm run build",
    "install:deprecated": "echo '⚠️  DEPRECATED: Install scripts no longer needed for Claude Code (native loading). For other tools, run: specweave init'",
    "generate:diagrams": "bash scripts/generate-diagram-svgs.sh",
    "docs:dev": "cd docs-site && npm start",
    "docs:build": "cd docs-site && npm run build"
  },
  "keywords": [
    "specweave",
    "intent-driven",
    "ai-agents",
    "claude-code",
    "autonomous-development",
    "saas",
    "nextjs",
    "prisma",
    "hetzner",
    "infrastructure",
    "terraform"
  ],
  "author": "SpecWeave Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anton-abyzov/specweave.git"
  },
  "bugs": {
    "url": "https://github.com/anton-abyzov/specweave/issues"
  },
  "homepage": "https://spec-weave.com",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin",
    ".claude-plugin",
    "skills",
    "agents",
    "commands",
    "hooks",
    "plugins",
    "src/templates",
    "src/adapters",
    "README.md",
    "SPECWEAVE.md",
    "CLAUDE.md",
    "INSTALL.md",
    "LICENSE"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "ajv": "^8.17.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.10.0",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@playwright/test": "^1.40.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  }
}
