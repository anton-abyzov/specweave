{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://spec-weave.com/schemas/specweave-config.json",
  "title": "SpecWeave Configuration",
  "description": "Schema for .specweave/config.yaml configuration file",
  "type": "object",
  "properties": {
    "plugins": {
      "type": "object",
      "description": "Plugin configuration",
      "properties": {
        "enabled": {
          "type": "array",
          "description": "List of enabled plugin names",
          "items": {
            "type": "string",
            "pattern": "^specweave-[a-z0-9-]+$"
          },
          "uniqueItems": true,
          "examples": [
            ["specweave-github", "specweave-frontend-stack"]
          ]
        },
        "settings": {
          "type": "object",
          "description": "Plugin-specific settings",
          "patternProperties": {
            "^specweave-[a-z0-9-]+$": {
              "type": "object",
              "description": "Settings for a specific plugin"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["enabled"],
      "additionalProperties": false
    },
    "project": {
      "type": "object",
      "description": "Project metadata",
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name",
          "minLength": 1,
          "maxLength": 256
        },
        "version": {
          "type": "string",
          "description": "Project version (semver)",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9.-]+)?(\\+[a-z0-9.-]+)?$"
        },
        "description": {
          "type": "string",
          "description": "Project description",
          "maxLength": 1024
        }
      },
      "additionalProperties": true
    },
    "adapters": {
      "type": "object",
      "description": "Adapter configuration",
      "properties": {
        "default": {
          "type": "string",
          "description": "Default adapter to use",
          "enum": ["claude", "cursor", "copilot", "generic"]
        }
      },
      "additionalProperties": true
    },
    "language": {
      "type": "string",
      "description": "Primary language for generated content and CLI",
      "enum": ["en", "ru", "es", "zh", "de", "fr", "ja", "ko", "pt"],
      "default": "en"
    },
    "limits": {
      "type": "object",
      "description": "Work-in-progress (WIP) limits - simplified to enforce focus (v0.7.0+)",
      "properties": {
        "maxActiveIncrements": {
          "type": "number",
          "description": "Maximum active increments at any time (default: 1 for maximum focus)",
          "minimum": 1,
          "maximum": 3,
          "default": 1
        },
        "hardCap": {
          "type": "number",
          "description": "Absolute maximum active increments, never exceeded (emergency ceiling)",
          "minimum": 1,
          "maximum": 5,
          "default": 2
        },
        "allowEmergencyInterrupt": {
          "type": "boolean",
          "description": "Allow 2nd active increment for hotfix/bug emergencies",
          "default": true
        },
        "typeBehaviors": {
          "type": "object",
          "description": "Increment type-specific behaviors",
          "properties": {
            "canInterrupt": {
              "type": "array",
              "description": "Types that can interrupt existing work (emergency scenarios)",
              "items": {
                "type": "string",
                "enum": ["hotfix", "bug"]
              },
              "default": ["hotfix", "bug"]
            },
            "autoAbandonDays": {
              "type": "object",
              "description": "Auto-abandon increments after N days of inactivity",
              "properties": {
                "experiment": {
                  "type": "number",
                  "description": "Days before experiment auto-abandons",
                  "minimum": 1,
                  "default": 14
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "staleness": {
          "type": "object",
          "description": "Staleness warning thresholds (in days)",
          "properties": {
            "paused": {
              "type": "number",
              "description": "Warn if paused for more than N days",
              "minimum": 1,
              "default": 7
            },
            "active": {
              "type": "number",
              "description": "Warn if active for more than N days",
              "minimum": 1,
              "default": 30
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "hooks": {
      "type": "object",
      "description": "Hook configuration for lifecycle automation (Claude Code only)",
      "properties": {
        "post_task_completion": {
          "type": "object",
          "description": "Post-task completion hook settings",
          "properties": {
            "sync_living_docs": {
              "type": "boolean",
              "description": "Automatically sync increment specs to living docs after task completion",
              "default": true
            },
            "sync_tasks_md": {
              "type": "boolean",
              "description": "Update tasks.md with completion status",
              "default": true
            },
            "external_tracker_sync": {
              "type": "boolean",
              "description": "Sync to external tracker (GitHub Issues, Jira, ADO)",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "post_increment_planning": {
          "type": "object",
          "description": "Post-increment planning hook settings",
          "properties": {
            "auto_create_github_issue": {
              "type": "boolean",
              "description": "Automatically create GitHub issue after increment planning",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "post_increment_done": {
          "type": "object",
          "description": "Post-increment done hook settings (MANDATORY for GitHub Project sync)",
          "properties": {
            "sync_to_github_project": {
              "type": "boolean",
              "description": "MANDATORY: Automatically sync living docs spec to GitHub Project when increment closes (ensures source of truth integrity)",
              "default": true
            },
            "close_github_issue": {
              "type": "boolean",
              "description": "Automatically close GitHub issue when increment closes",
              "default": true
            },
            "update_living_docs_first": {
              "type": "boolean",
              "description": "Ensure living docs are synced before GitHub Project sync",
              "default": true
            }
          },
          "additionalProperties": false,
          "required": ["sync_to_github_project"]
        }
      },
      "additionalProperties": false
    },
    "statusLine": {
      "type": "object",
      "description": "Status line configuration for fast increment progress display",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable status line rendering",
          "default": true
        },
        "maxCacheAge": {
          "type": "number",
          "description": "Maximum age of cache before forcing refresh (milliseconds)",
          "default": 5000,
          "minimum": 1000,
          "maximum": 60000
        },
        "progressBarWidth": {
          "type": "number",
          "description": "Width of progress bar in characters",
          "default": 8,
          "minimum": 4,
          "maximum": 20
        },
        "maxIncrementNameLength": {
          "type": "number",
          "description": "Maximum length for increment name display",
          "default": 20,
          "minimum": 10,
          "maximum": 50
        },
        "maxTaskTitleLength": {
          "type": "number",
          "description": "Maximum length for task title display",
          "default": 30,
          "minimum": 15,
          "maximum": 100
        },
        "showProgressBar": {
          "type": "boolean",
          "description": "Show visual progress bar",
          "default": true
        },
        "showPercentage": {
          "type": "boolean",
          "description": "Show percentage completion",
          "default": true
        },
        "showCurrentTask": {
          "type": "boolean",
          "description": "Show current task being worked on",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "translation": {
      "type": "object",
      "description": "Translation settings for multilingual support",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable/disable translation system entirely",
          "default": true
        },
        "method": {
          "type": "string",
          "description": "Translation method (always in-session for zero cost)",
          "enum": ["in-session"],
          "default": "in-session"
        },
        "autoTranslateInternalDocs": {
          "type": "boolean",
          "description": "Automatically translate increment files (spec.md, plan.md, tasks.md) and living docs specs to English after increment planning (recommended: true)",
          "default": true
        },
        "autoTranslateLivingDocs": {
          "type": "boolean",
          "description": "Automatically translate living docs to English after task completion (ADRs, HLDs, etc.)",
          "default": true
        },
        "keepFrameworkTerms": {
          "type": "boolean",
          "description": "Keep framework terms (Increment, Living Docs, SpecWeave, ADR, RFC) in English",
          "default": true
        },
        "keepTechnicalTerms": {
          "type": "boolean",
          "description": "Keep technical terms (Git, Docker, Kubernetes, npm, TypeScript) in English",
          "default": true
        },
        "translateCodeComments": {
          "type": "boolean",
          "description": "Translate comments in generated code",
          "default": true
        },
        "translateVariableNames": {
          "type": "boolean",
          "description": "Translate variable/function names (NOT RECOMMENDED)",
          "default": false
        },
        "filesAlwaysInEnglish": {
          "type": "array",
          "description": "File patterns that must always be in English (glob patterns)",
          "items": {
            "type": "string"
          },
          "default": [
            "spec.md",
            "plan.md",
            "tasks.md",
            "tests.md",
            "docs/internal/**/*.md"
          ]
        },
        "translationModel": {
          "type": "string",
          "description": "LLM model to use for translation",
          "enum": ["haiku", "sonnet", "opus"],
          "default": "haiku"
        }
      },
      "additionalProperties": false
    },
    "multiProject": {
      "type": "object",
      "description": "Multi-project configuration for internal docs organization",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable multi-project mode (false = single project using projects/default/)",
          "default": false
        },
        "activeProject": {
          "type": "string",
          "description": "Currently active project ID",
          "pattern": "^[a-z0-9-]+$",
          "default": "default"
        },
        "projects": {
          "type": "array",
          "description": "Available projects",
          "items": {
            "type": "object",
            "description": "Project configuration",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique project identifier (kebab-case)",
                "pattern": "^[a-z0-9-]+$",
                "minLength": 1,
                "maxLength": 64
              },
              "name": {
                "type": "string",
                "description": "Project display name",
                "minLength": 1,
                "maxLength": 128
              },
              "description": {
                "type": "string",
                "description": "Project description",
                "maxLength": 512
              },
              "techStack": {
                "type": "array",
                "description": "Technologies used in this project",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "team": {
                "type": "string",
                "description": "Team or organization name",
                "minLength": 1,
                "maxLength": 128
              },
              "contacts": {
                "type": "object",
                "description": "Project contacts",
                "properties": {
                  "lead": {
                    "type": "string",
                    "description": "Tech lead email",
                    "format": "email"
                  },
                  "pm": {
                    "type": "string",
                    "description": "Product manager email",
                    "format": "email"
                  }
                },
                "additionalProperties": false
              },
              "syncProfiles": {
                "type": "array",
                "description": "Linked sync profiles from sync.profiles (references profile IDs)",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            },
            "required": ["id", "name", "description", "team"],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "brownfield": {
      "type": "object",
      "description": "Brownfield documentation import tracking",
      "properties": {
        "importHistory": {
          "type": "array",
          "description": "History of all brownfield imports",
          "items": {
            "type": "object",
            "description": "Single import record",
            "properties": {
              "source": {
                "type": "string",
                "description": "Source type",
                "enum": ["notion", "confluence", "wiki", "custom"]
              },
              "workspace": {
                "type": "string",
                "description": "Source workspace/space name"
              },
              "importedAt": {
                "type": "string",
                "description": "ISO 8601 timestamp of import",
                "format": "date-time"
              },
              "project": {
                "type": "string",
                "description": "Target project ID",
                "pattern": "^[a-z0-9-]+$"
              },
              "filesImported": {
                "type": "number",
                "description": "Total number of files imported",
                "minimum": 0
              },
              "destination": {
                "type": "string",
                "description": "Destination path"
              }
            },
            "required": ["source", "importedAt", "project", "filesImported", "destination"],
            "additionalProperties": false
          },
          "default": []
        }
      },
      "additionalProperties": false
    },
    "documentation": {
      "type": "object",
      "description": "Documentation preview configuration (Docusaurus local server)",
      "properties": {
        "preview": {
          "type": "object",
          "description": "Local documentation preview settings",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable documentation preview feature",
              "default": true
            },
            "autoInstall": {
              "type": "boolean",
              "description": "Automatically install Docusaurus dependencies (lazy install on first use recommended)",
              "default": false
            },
            "port": {
              "type": "number",
              "description": "Default port for internal docs preview (3015 for internal, 3016 for public)",
              "minimum": 1024,
              "maximum": 65535,
              "default": 3015
            },
            "openBrowser": {
              "type": "boolean",
              "description": "Automatically open browser when server starts",
              "default": true
            },
            "theme": {
              "type": "string",
              "description": "Documentation theme",
              "enum": ["default", "classic", "dark"],
              "default": "default"
            },
            "excludeFolders": {
              "type": "array",
              "description": "Folders to exclude from documentation",
              "items": {
                "type": "string"
              },
              "default": ["legacy", "node_modules"]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "reflection": {
      "type": "object",
      "description": "AI Self-Reflection System configuration (v0.12.0+)",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable/disable reflection system entirely",
          "default": true
        },
        "mode": {
          "type": "string",
          "description": "Reflection execution mode",
          "enum": ["auto", "manual", "disabled"],
          "default": "auto"
        },
        "depth": {
          "type": "string",
          "description": "Analysis depth level",
          "enum": ["quick", "standard", "deep"],
          "default": "standard"
        },
        "model": {
          "type": "string",
          "description": "AI model for reflection analysis",
          "enum": ["haiku", "sonnet", "opus"],
          "default": "haiku"
        },
        "categories": {
          "type": "object",
          "description": "Enable/disable specific analysis categories",
          "properties": {
            "security": {
              "type": "boolean",
              "description": "Security vulnerability detection (OWASP Top 10)",
              "default": true
            },
            "quality": {
              "type": "boolean",
              "description": "Code quality and best practices analysis",
              "default": true
            },
            "testing": {
              "type": "boolean",
              "description": "Test coverage and quality analysis",
              "default": true
            },
            "performance": {
              "type": "boolean",
              "description": "Performance issue detection",
              "default": true
            },
            "technicalDebt": {
              "type": "boolean",
              "description": "Technical debt tracking",
              "default": true
            }
          },
          "additionalProperties": false
        },
        "criticalThreshold": {
          "type": "string",
          "description": "Minimum severity to show terminal warnings",
          "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"],
          "default": "MEDIUM"
        },
        "storeReflections": {
          "type": "boolean",
          "description": "Store reflections to log files",
          "default": true
        },
        "autoCreateFollowUpTasks": {
          "type": "boolean",
          "description": "Automatically create tasks for critical issues",
          "default": false
        },
        "soundNotifications": {
          "type": "boolean",
          "description": "Play sound for critical issues (optional)",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "sync": {
      "type": "object",
      "description": "External sync configuration for multi-project support (GitHub, JIRA, ADO, etc.)",
      "properties": {
        "activeProfile": {
          "type": "string",
          "description": "Default active sync profile"
        },
        "profiles": {
          "type": "object",
          "description": "All available sync profiles",
          "patternProperties": {
            "^[a-z0-9-]+$": {
              "type": "object",
              "description": "Sync profile configuration",
              "properties": {
                "provider": {
                  "type": "string",
                  "description": "External provider type",
                  "enum": ["github", "jira", "ado"]
                },
                "displayName": {
                  "type": "string",
                  "description": "Human-readable profile name",
                  "minLength": 1,
                  "maxLength": 128
                },
                "description": {
                  "type": "string",
                  "description": "Profile description",
                  "maxLength": 512
                },
                "strategy": {
                  "type": "string",
                  "description": "Sync strategy: simple (one container), filtered (multiple containers + boards), custom (raw query)",
                  "enum": ["simple", "filtered", "custom"],
                  "default": "simple"
                },
                "config": {
                  "type": "object",
                  "description": "Provider-specific configuration (backward compatible + hierarchical v0.10.0+)",
                  "properties": {
                    "owner": {
                      "type": "string",
                      "description": "GitHub owner (simple strategy)"
                    },
                    "repo": {
                      "type": "string",
                      "description": "GitHub repo (simple strategy)"
                    },
                    "domain": {
                      "type": "string",
                      "description": "Jira domain (all strategies)"
                    },
                    "projectKey": {
                      "type": "string",
                      "description": "Jira project key (simple strategy, backward compatible)"
                    },
                    "projects": {
                      "type": "array",
                      "description": "Jira project keys for project-per-team strategy (v0.8.19+)",
                      "items": {
                        "type": "string",
                        "minLength": 2,
                        "maxLength": 10,
                        "pattern": "^[A-Z0-9]+$"
                      },
                      "minItems": 1
                    },
                    "issueType": {
                      "type": "string",
                      "enum": ["Epic", "Story", "Task"],
                      "description": "Jira issue type"
                    },
                    "organization": {
                      "type": "string",
                      "description": "ADO organization (all strategies)"
                    },
                    "project": {
                      "type": "string",
                      "description": "ADO project (simple strategy, backward compatible)"
                    },
                    "workItemType": {
                      "type": "string",
                      "enum": ["Epic", "Feature", "User Story"],
                      "description": "ADO work item type"
                    },
                    "containers": {
                      "type": "array",
                      "description": "Containers for filtered strategy (v0.10.0+)",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "Container ID (Jira project key, GitHub repo, ADO project)",
                            "minLength": 1
                          },
                          "subOrganizations": {
                            "type": "array",
                            "description": "Sub-organizations (boards, project boards, team boards)",
                            "items": { "type": "string" }
                          },
                          "filters": {
                            "type": "object",
                            "description": "Filters applied to this container",
                            "properties": {
                              "includeLabels": {
                                "type": "array",
                                "items": { "type": "string" }
                              },
                              "excludeLabels": {
                                "type": "array",
                                "items": { "type": "string" }
                              },
                              "assignees": {
                                "type": "array",
                                "items": { "type": "string" }
                              },
                              "statusCategories": {
                                "type": "array",
                                "items": { "type": "string" }
                              },
                              "components": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Jira components"
                              },
                              "sprints": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Jira sprints"
                              },
                              "issueTypes": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "Jira issue types"
                              },
                              "milestones": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "GitHub milestones"
                              },
                              "states": {
                                "type": "array",
                                "items": {
                                  "type": "string",
                                  "enum": ["open", "closed"]
                                },
                                "description": "GitHub states"
                              },
                              "areaPaths": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "ADO area paths"
                              },
                              "iterationPaths": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "ADO iteration paths"
                              },
                              "workItemTypes": {
                                "type": "array",
                                "items": { "type": "string" },
                                "description": "ADO work item types"
                              }
                            },
                            "additionalProperties": false
                          }
                        },
                        "required": ["id"],
                        "additionalProperties": false
                      },
                      "minItems": 1
                    },
                    "customQuery": {
                      "type": "string",
                      "description": "Custom query for custom strategy (JQL/GraphQL/WIQL)",
                      "minLength": 1
                    }
                  },
                  "additionalProperties": false
                },
                "timeRange": {
                  "type": "object",
                  "description": "Time range configuration",
                  "properties": {
                    "default": {
                      "type": "string",
                      "description": "Default time range",
                      "enum": ["1W", "2W", "1M", "3M", "6M", "1Y", "ALL"],
                      "default": "1M"
                    },
                    "max": {
                      "type": "string",
                      "description": "Maximum allowed time range",
                      "enum": ["1W", "2W", "1M", "3M", "6M", "1Y", "ALL"],
                      "default": "6M"
                    }
                  },
                  "required": ["default", "max"]
                },
                "rateLimits": {
                  "type": "object",
                  "description": "Rate limiting configuration",
                  "properties": {
                    "maxItemsPerSync": {
                      "type": "number",
                      "description": "Maximum items to sync in one operation",
                      "minimum": 1,
                      "default": 500
                    },
                    "warnThreshold": {
                      "type": "number",
                      "description": "Warn when exceeding this threshold",
                      "minimum": 1,
                      "default": 100
                    }
                  }
                },
                "projectContext": {
                  "type": "object",
                  "description": "Project context for smart detection",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Project name"
                    },
                    "description": {
                      "type": "string",
                      "description": "Project description"
                    },
                    "keywords": {
                      "type": "array",
                      "description": "Keywords for auto-detection",
                      "items": { "type": "string" }
                    },
                    "team": {
                      "type": "string",
                      "description": "Team/organization name"
                    }
                  }
                }
              },
              "required": ["provider", "displayName", "config", "timeRange"]
            }
          }
        },
        "projects": {
          "type": "object",
          "description": "Project contexts for organizing specs per project/team",
          "patternProperties": {
            "^[a-z0-9-]+$": {
              "type": "object",
              "description": "Project context",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique project identifier"
                },
                "name": {
                  "type": "string",
                  "description": "Project name"
                },
                "description": {
                  "type": "string",
                  "description": "Project description"
                },
                "team": {
                  "type": "string",
                  "description": "Team/organization"
                },
                "keywords": {
                  "type": "array",
                  "description": "Keywords for auto-detection",
                  "items": { "type": "string" }
                },
                "defaultSyncProfile": {
                  "type": "string",
                  "description": "Default sync profile for this project"
                },
                "specsFolder": {
                  "type": "string",
