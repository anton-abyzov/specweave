{
  "project": {
    "name": "specweave",
    "version": "0.7.0",
    "description": "Spec-Driven Development Framework for Claude Code"
  },
  "adapters": {
    "default": "claude"
  },
  "language": "en",
  "plugins": {
    "enabled": [
      "specweave-github",
      "specweave-jira"
    ]
  },
  "sync": {
    "activeProfile": "specweave-dev",
    "profiles": {
      "specweave-dev": {
        "provider": "github",
        "displayName": "SpecWeave Development",
        "config": {
          "owner": "anton-abyzov",
          "repo": "specweave"
        },
        "timeRange": {
          "default": "1M",
          "max": "6M"
        },
        "rateLimits": {
          "maxItemsPerSync": 500,
          "warnThreshold": 100
        }
      }
    },
    "projects": {
      "specweave-core": {
        "id": "specweave-core",
        "name": "SpecWeave Core Development",
        "description": "Core framework and plugin system",
        "keywords": ["framework", "cli", "plugin", "typescript"],
        "team": "Core Team",
        "defaultSyncProfile": "specweave-dev",
        "specsFolder": ".specweave/docs/internal/projects/specweave-core"
      }
    },
    "settings": {
      "autoDetectProject": true,
      "autoCreateIssue": true,
      "defaultTimeRange": "1M",
      "rateLimitProtection": true,
      "syncDirection": "bidirectional",
      "conflictResolution": "prompt"
    }
  },
  "limits": {
    "maxActiveIncrements": 1,
    "hardCap": 2,
    "allowEmergencyInterrupt": true,
    "typeBehaviors": {
      "canInterrupt": [
        "hotfix",
        "bug"
      ],
      "autoAbandonDays": {
        "experiment": 14
      }
    },
    "staleness": {
      "paused": 7,
      "active": 30
    }
  },
  "translation": {
    "enabled": false
  },
  "hooks": {
    "post_task_completion": {
      "sync_living_docs": true,
      "sync_tasks_md": true,
      "external_tracker_sync": true
    }
  }
}
