{
  "testConfigurations": [
    {
      "name": "Project-per-team Strategy",
      "strategy": "project-per-team",
      "environment": {
        "AZURE_DEVOPS_STRATEGY": "project-per-team",
        "AZURE_DEVOPS_PROJECTS": "AuthService,UserService,PaymentService,NotificationService,InventoryService",
        "AZURE_DEVOPS_ORG": "test-organization",
        "AZURE_DEVOPS_PAT": "test-pat-token"
      },
      "expectedFolders": [
        ".specweave/docs/internal/specs/AuthService",
        ".specweave/docs/internal/specs/UserService",
        ".specweave/docs/internal/specs/PaymentService",
        ".specweave/docs/internal/specs/NotificationService",
        ".specweave/docs/internal/specs/InventoryService"
      ],
      "testSpecs": [
        {
          "content": "OAuth implementation with JWT tokens",
          "expectedProject": "AuthService",
          "minConfidence": 0.7
        },
        {
          "content": "User profile management and preferences",
          "expectedProject": "UserService",
          "minConfidence": 0.7
        },
        {
          "content": "Stripe payment processing and refunds",
          "expectedProject": "PaymentService",
          "minConfidence": 0.8
        }
      ]
    },
    {
      "name": "Area-path-based Strategy",
      "strategy": "area-path-based",
      "environment": {
        "AZURE_DEVOPS_STRATEGY": "area-path-based",
        "AZURE_DEVOPS_PROJECT": "MainProduct",
        "AZURE_DEVOPS_AREA_PATHS": "Frontend,Backend,Mobile,DevOps,DataEngineering",
        "AZURE_DEVOPS_ORG": "test-organization",
        "AZURE_DEVOPS_PAT": "test-pat-token"
      },
      "expectedFolders": [
        ".specweave/docs/internal/specs/MainProduct/Frontend",
        ".specweave/docs/internal/specs/MainProduct/Backend",
        ".specweave/docs/internal/specs/MainProduct/Mobile",
        ".specweave/docs/internal/specs/MainProduct/DevOps",
        ".specweave/docs/internal/specs/MainProduct/DataEngineering"
      ],
      "testSpecs": [
        {
          "content": "React components with styled-components",
          "expectedAreaPath": "MainProduct\\Frontend",
          "minConfidence": 0.6
        },
        {
          "content": "REST API endpoints with database queries",
          "expectedAreaPath": "MainProduct\\Backend",
          "minConfidence": 0.6
        },
        {
          "content": "iOS and Android native application",
          "expectedAreaPath": "MainProduct\\Mobile",
          "minConfidence": 0.7
        }
      ]
    },
    {
      "name": "Team-based Strategy",
      "strategy": "team-based",
      "environment": {
        "AZURE_DEVOPS_STRATEGY": "team-based",
        "AZURE_DEVOPS_PROJECT": "Platform",
        "AZURE_DEVOPS_TEAMS": "Alpha,Beta,Gamma,Delta,Epsilon",
        "AZURE_DEVOPS_ORG": "test-organization",
        "AZURE_DEVOPS_PAT": "test-pat-token"
      },
      "expectedFolders": [
        ".specweave/docs/internal/specs/Platform/Alpha",
        ".specweave/docs/internal/specs/Platform/Beta",
        ".specweave/docs/internal/specs/Platform/Gamma",
        ".specweave/docs/internal/specs/Platform/Delta",
        ".specweave/docs/internal/specs/Platform/Epsilon"
      ],
      "testSpecs": [
        {
          "content": "team: Alpha\n\nFrontend dashboard implementation",
          "expectedTeam": "Alpha",
          "minConfidence": 1.0
        },
        {
          "content": "Backend API development with microservices",
          "expectedTeam": "Beta",
          "minConfidence": 0.5
        }
      ]
    }
  ],
  "integrationTests": {
    "timeout": 30000,
    "retryAttempts": 3,
    "mockApiResponses": true,
    "validateFolderStructure": true,
    "testBidirectionalSync": true,
    "testConflictResolution": true,
    "testCrossProjectDependencies": true
  },
  "performanceTargets": {
    "projectDetection": {
      "maxDuration": 100,
      "unit": "ms"
    },
    "specSync": {
      "maxDuration": 5000,
      "unit": "ms"
    },
    "bulkSync": {
      "maxItemsPerBatch": 50,
      "maxDuration": 30000,
      "unit": "ms"
    }
  }
}